<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/message_user"
        android:theme="@style/MessageItems"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"/>

    <ImageButton
        android:id="@+id/help"
        android:visibility="invisible"
        android:layout_toEndOf="@+id/message_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:theme="@style/ReportIconStyle"
        android:background="?android:attr/selectableItemBackground" />

    <ImageButton
        android:id="@+id/delete"
        android:visibility="invisible"
        android:layout_toEndOf="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:theme="@style/DelIconStyle"
        android:background="?android:attr/selectableItemBackground" />

    <ImageButton
        android:id="@+id/pin"
        android:visibility="invisible"
        android:layout_toEndOf="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:theme="@style/PinIconStyle"
        android:background="?android:attr/selectableItemBackground" />

    <TextView
        android:id="@+id/message_time"
        android:theme="@style/MessageItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentEnd="true"/>

    <com.github.library.bubbleview.BubbleTextView
        android:id="@+id/person_message_text"
        android:theme="@style/SelfMessage"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_user"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:autoLink="all"
        android:padding="10dp"
        android:textSize="18sp"
        app:angle="8dp"
        app:arrowHeight="10dp"
        app:arrowLocation="left"
        app:arrowPosition="10dp"
        app:arrowWidth="8dp"/>

    <com.github.library.bubbleview.BubbleTextView
        android:id="@+id/user_message_text"
        android:theme="@style/Message"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/message_user"
        android:autoLink="all"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:angle="8dp"
        app:arrowWidth="8dp"
        app:arrowHeight="10dp"
        app:arrowPosition="10dp"
        app:arrowLocation="right"/>

</RelativeLayout>