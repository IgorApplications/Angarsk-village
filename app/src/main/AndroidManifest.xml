<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.iapp.angara">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Angara">
        <activity
            android:name=".main.MenuActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.ListActivity"
            android:exported="false" />
        <activity
            android:name=".main.MapActivity"
            android:exported="false" />
        <activity
            android:name=".attractions.AttractionActivity"
            android:exported="false" />
        <activity
            android:name=".main.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".main.ReportsActivity"
            android:exported="false" />
        <activity
            android:name=".main.ModerationActivity"
            android:exported="false" />
    </application>

</manifest>